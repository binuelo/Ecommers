doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href="./styles.css")
		title NodeJs
	
	body
		h1(class="title") #{title}
		
		div(class="container")
			if users.length === 0
				p No Users available 
			else
				each user in users
					div(class="post-card")
						h3 #{user.username}
						p #{user.email}

	script(src="./index.js")

